{
  "name": "Frontend Application",
  "dockerComposeFile": "../compose.yaml",
  "service": "url-frontend",
   "workspaceFolder": "/app",
  "shutdownAction": "stopCompose",
  "forwardPorts": [3000],
    "postCreateCommand": "bash .devcontainer/scripts/post-create-commands.sh",
    "postAttachCommand": "bash .devcontainer/scripts/post-attach-commands.sh",
  "runArgs": ["--env-file", ".devcontainer/.env"],
  "remoteUser": "node",

  "customizations": {
    "vscode": {
      "extensions": [
        "wix.vscode-import-cost",
        "meganrogge.template-string-converter",
        "esbenp.prettier-vscode",
        "xabikos.javascriptsnippet",
        "postman.postman-for-vscode",
        "dbaeumer.vscode-eslint",
        "csstools.postcss",
        "ms-azuretools.vscode-docker",
        "rvest.vs-code-prettier-eslint",
        "bradlc.vscode-tailwindcss",
        "graphql.vscode-graphql",
        "styled-components.vscode-styled-components",
        "prisma.prisma",
        "eamodio.gitlens",
        "cweijan.vscode-redis-client"
      ],
      "settings": {
        "editor.formatOnSave": true,
        "editor.tabSize": 2,
        "files.eol": "\n",
        "terminal.integrated.shell.linux": "/bin/bash"
      }
    }
  },

  "mounts": [
    "source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=cached"
  ],

  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "22"
    },
    "ghcr.io/devcontainers/features/docker-in-docker:1": {}
  },

  "updateContentCommand": "echo 'No updates required'"
}
